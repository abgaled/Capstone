    script(type='text/javascript').
        $(document).ready(function(){

            $('#printReceiptButton').click(function(){
                $('#noPrint').attr('style', 'display:none;')
                javascript:window.print(print)
                $('#formprint').submit();
                $('#noPrint').attr('style', 'display:show;')
            });
        });