extends ../../home/views/navbar.pug

block content
    <div class="right_col" role="main">
        <div class="">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        each project in tbl_project
                            <center>
                                <h1>APPLICATION FORM</h1>
                                <h5>Type of Application: Household</h5>
                                <h4>
                                    value=project.varchar_projectName
                                </h4>
                                <small>
                                    value="(" + project.text_projectObjective + ")"
                                </small>
                            </center>
                        
                        <div class="clearfix"></div>
                    </div>
                    <form method="POST" action="apply/household">
                        <div class="x_content">
                            <div>
                                <button id="btnAddAddress" class="btn btn-primary btn-md" type="button" style="float:right;">Add Family Member</button>
                            </div>
                            
                            <table id="tbl" class="table table-borderless table-data3" style="table-layout:fixed;width:100%;">
                                <thead>
                                        <tr>
                                            <th>Relative's Name</th>
                                            <th>Relationship</th>
                                            <th>Civil Status</th>
                                            <th>Educational Attainment</th>
                                            <th>Occupation</th>
                                            <th>Worker Class</th>
                                        </tr>
                                </thead>
                            </table>
                            <div id ="idcontent">

                            </div>
                            <br>
                            <hr>
                            
                            <div><button id="btnAddContributor" class="btn btn-primary btn-md" type="button" style="float:right;">Add Financial Contributor</button></div>
                            
                            <table id="tbl1" class="table table-borderless table-data3" style="table-layout:fixed;width:100%;">
                                <thead>
                                        <tr>
                                            <th>Purpose of Financial Contribution<br><small> (e.g. educational assistance)</small></th>
                                            <th>Relationship</th>
                                            <th>Frequency of Contribution</th>
                                            <th>Annual Contribution</th>
                                        </tr>
                                </thead>
                            </table>
                            <div>
                                <div id ="fincontribution">
                                    
                                </div>
                                <div style="float:right;">
                                    <label style="font-weight:bold;font-size:19;">TOTAL: </label><span>&nbsp<input type="text" readonly/></span>
                                </div>
                            </div>
                            <br>
                            <hr>
                            <div class="form-row">
                                <div class="form-group col-md-4 col-sm-12">
                                    <label for="ap-fname" class="form-control-label"><h4><strong>House Status:</strong></h4></label>
                                    <select name ="famhouse" class="form-control">
                                        <option value = "Owned">Owned</option>
                                        <option value = "Rent">Rent</option>
                                        <option value = "Rent to own">Rent to own</option>
                                        <option value = "Squater">Squater</option>
                                    </select>
                                </div>
                                <div><button class="btn btn-success btn-lg" type="submit" style="float:right;">Register</button></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    //- SCRIPT FOR TABS
    script.
        $(document).ready(function(){
            $("#btnAddAddress").click(function () {
                $("#idcontent").append('<tbody><tr><td><input type="text" name="famname" /></td><td><input type="text" name="famrel" /></td><td><select name ="famcivil" class="form-control"><option value = "Single">Single</option><option value = "Married">Married</option><option value = "Widowed">Widowed</option><option value = "Divorce/Separated">Divorce/Separated</option><option value = "Unknown">Unknown</option></select></td> <td><input type="text" name="fameduc" /></td><td><input type="text" name="famoccu" /></td><td><select name ="famclass" class="form-control" style="width:190px;"><option value = "Works for private household">Works for private household</option><option value = "Works for private establishment">Works for private establishment</option><option value = "Works for government agency/corporation">Works for government agency/corporation</option><option value = "Self-employed without any employee">Self-employed without any employee</option><option value = "Employer in own family-operated farm/business">Employer in own family-operated farm/business</option><option value = "Works with pay on own family-operated farm/business">Works with pay on own family-operated farm/business</option><option value = "Works withoyt pay on own family-operated farm/business">Works withoyt pay on own family-operated farm/business</option><option value = "Unemployed">Unemployed</option></select></td></tr></tbody>  ');
            });

            $("#btnAddContributor").click(function () {
                $("#fincontribution").append('<tbody><tr><td><input type="text" name="famconpurpose" /></td><td><input type="text" name="famconrel" /></td><td><select class="form-control" name="famconfrequency"><option value="Monthly">Monthly</option><option value="Quarterly">Quarterly</option><option value="Semi Annual">Semi Annual</option><option value="Annual">Annual</option><option value="Irregular">Irregular</option></select></td><td><input type="text" name="famconannual" /></td></tr></tbody>');
            });
        });