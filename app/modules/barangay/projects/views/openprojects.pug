extends ../../home/views/navbar.pug

block content
    <link href="/barangay/styles.css" rel="stylesheet">
        <!-- page-header -->
        <div class="page-header-projects">
            <div class="container" id="container-header" >
                <div class="row">
                    <div class="page-caption">
                        <p style="color: #3B5997;">Open Projects</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.page-header-->
        <!-- tour-booking -->
        <div class="content" style="padding-top:1.5%;">
            <div class="container">
                <div class="row ">
                    <div class="wrapper" style="padding-top:3%;">
                            <!--Table-->
                            <table id="datatable" class="table table-striped table-bordered">
                                <!--Table head-->
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="th-lg"><i class="fa fa-file-text-o fa-lg pr-2" aria-hidden="true"></i>Projects</th>
                                        <th class="th-lg"><i class="fa fa-calendar-times-o fa-lg pr-2" aria-hidden="true"></i>End Date</th>
                                        <th class="th-lg"><i class="fa fa-folder-open-o fa-lg pr-2" aria-hidden="true"></i>Slots</th>
                                        <th class="th-lg"><i class="fa fa-edit fa-lg pr-2" aria-hidden="true"></i>Action/s</th>
                                    </tr>
                                </thead>
                                <!--Table head-->

                                <!--Table body-->
                                <tbody id="openprojectsbody">
                                    each project in tbl_project
                                        <tr>
                                        <td>
                                            value=project.int_projectID
                                        </td>
                                        <td>
                                            value=project.varchar_projectName
                                        </td>
                                        <td>
                                            value=project.date_projectEnd
                                        </td>
                                        <td>
                                            value=project.int_allotedSlot
                                        </td>
                                        <td>
                                            a(href=`/barangay/projects/applications/${project.int_projectID}/apply` class ="btn btn-info"): span.fa.fa-files-o Apply
                                        </td>
                                        </tr>
                                </tbody>
                                <!--Table body-->
                            </table>
                            <!--Table-->
                    </div>
                </div>
            </div>
        </div>
    <!-- /.tour-booking -->