extends ../../navbar/views/navbar.pug

block content
        <div class="right_col" role="main">
        each form in tbl_formtype
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h3>Update:<h3>
                  a(href=`/admin/maintenance/forms` class="btn btn-danger btn-s pull-right"): span.fa.fa-times-circle      
                </div>
                  <form method="POST" action="editforms">
                    input(type="hidden" value=`${form.int_formTypeID}` name="int_formTypeID")

                    <div class="row form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="formname"> Form Name <span class="required">*</span>
                      </label>
                      <div class="col-md-4 col-sm-4 col-xs-12">
                        //- <input id="beneficiaryname" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="3" name="beneficiaryname" placeholder="" required="required" value=`${form.varchar_beneficiaryName}` type="text">
                        input(type="text" class="form-control col-md-7 col-xs-12" id="formname" placeholder="Form Name" name="formname" value=`${form.varchar_formName}` required)
                      </div>
                    </div>
                      
                    <div class="row form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="formdescription"> Form Description <span class="required">*</span>
                      </label>
                      <div class="col-md-8 col-sm-8 col-xs-12">
                        //- <input id="beneficiarydescription" class="form-control col-md-12 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="beneficiarydescription" placeholder="" required="required" value=`${form.text_beneficiaryDescription}` type="text">
                        input(type="text" class="form-control col-md-7 col-xs-12" id="formdescription" placeholder="Form Description" name="formdescription" value=`${form.text_formDescription}` required)
                        
                      </div>
                    </div>
                      <button type="submit" class="btn btn-default float-right" id="editformsubmit">Submit</button>
                  </div>
                  </form>
                </div>
            </div>
          </div>
        </div>