extends ../../home/views/navbar.pug

block content
     <!-- STATISTIC-->
        <section class="statistic">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                //dito start ng content
                <h3 class="title-5 m-b-35">New Project List</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option disabled="disabled" selected="selected">Select ...</option>
                                    <option value = "All">All</option>
                                    <option value = "1">Health</option>
                                    <option value = "2">Education</option>
                                    <option value = "3">Finance</option>
                                    <option value = "4">Infrastracture</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter">
                                <i class="zmdi zmdi-filter-list"></i>filters</button>
                        </div>
                    </div>
                    <div class="table-responsive  m-b-40 pb-5">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Project Objectives</th>
                                    <th>Category</th>
                                    <th>Alloted Slot</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                            </thead>
                            <tbody>
                            each project in tbl_project
                                <tr class="tr-shadow">
                                    <td>
                                    value=project.varchar_projectName
                                    </td>
                                    <td>
                                        value=project.text_projectObjective
                                    </td>
                                    <td>
                                        value=project.varchar_categoryName
                                    </td>
                                    <td>
                                        value=project.int_allotedSlot
                                    </td>
                                    <td>
                                        value=project.enum_projectStatus
                                    </td>
                                    <td> 
                                        a(href=`/office/projects/newproject/${project.int_projectID}/viewproj` id="viewproj" class="btn btn-primary btn-block"): span View Details
                                        a(href=`/office/projects/newproject/${project.int_projectID}/viewapp` id="viewapp" class="btn btn-primary btn-block"): span Applications
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal fade bs-example-modal-lg" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="largeModalLabel">Project Information</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12">
                            <div class="card">
                        each project in tbl_project
                            <div class="card-header">
                                <strong>Project Title: </strong>
                                value=project.varchar_projectName
                                
                                    <p class=""><strong>Category:  </strong>
                                    value=project.varchar_categoryName
                                    </p>
                            </div>
                            <div class="card-body card-block">
                                <form action="" method="post" class="form-inline">
                                    input(type="hidden" value=`${project.int_projectID}` name="int_projectID")
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <div class="col-12 col-md-12">
                                                    <strong class=" form-control-static">Release Location: </strong>
                                                </div>
                                                <div class="col-12 col-md-12">
                                                    <p class="form-control-static pl-5">
                                                    value=project.int_releaseLocationID
                                                    </p>
                                                    <br>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <div class="col-12 col-md-9">
                                                    <strong class=" form-control-static">Budget: </strong>
                                                </div>
                                                <div class="col-12 col-md-8">
                                                    <p class="form-control-static pl-5"> Php
                                                    value=project.decimal_actualBudget
                                                    </p>
                                                    <br>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-12 col-md-9">
                                            <strong class=" form-control-static">Rational: </strong>
                                        </div>
                                        <div class="col-12 col-md-7">
                                            <p class="form-control-static pl-5">
                                            value=project.varchar_projectRationale
                                            </p>
                                            <br>
                                        </div>
                                    </div>  
                                    <div class="form-group">
                                        <div class="col-12 col-md-9">
                                            <strong class=" form-control-static">Objective: </strong>
                                        </div>
                                        <div class="col-12 col-md-7">
                                            <p class="form-control-static pl-5">
                                            value=project.text_projectObjective
                                            </p>
                                            <br>
                                        </div>
                                    </div>  
                                    <div class="form-group">
                                        <div class="col-12 col-md-9">
                                            <strong class=" form-control-static">Description: </strong>
                                        </div>
                                        <div class="col-12 col-md-7">
                                            <p class="form-control-static pl-5">
                                            value=project.text_projectDescription
                                            </p>
                                            <br>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-12 col-md-12">
                                        <p class=" form-control-static">Date Opened: 
                                        value=project.date_projectStart
                                        </p>
                                    </div>
                                    a(href=`/office/projects/newproject/${project.int_projectID}/viewapp` id="viewapp" class="btn btn-primary btn-block mt-3"): span.fa.fa-dot-circle-o Applications
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END STATISTIC-->