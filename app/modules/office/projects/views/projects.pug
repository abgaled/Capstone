                                            console.log("========Id");
                                            console.log(Id);
                                            console.log("========Id");
                                            

                                            $.ajax({
                                                type : "POST",
                                                url : window.location + "/ajaxgetprojectdetails",
                                                data: { ajProjectID: Id},
                                                dataType: "json",
                                                success: function(tbl_project1){

                                                console.log(tbl_project1)

                                                $.each(tbl_project1, function (index, value) {
                                                    console.log(value);
                                                    if(value.enum_projectStatus == "Closed Application"){
                                                        if(value.date_targetStartRelease != currdate){
                                                            $('#startreleaseModal').modal('show');
                                                            document.getElementById("r-projectDate").innerHTML = value.date_targetStartRelease
                                                            document.getElementById("rl-current_date").innerHTML = currdate
                                                            document.getElementById("r-current_date").value = currentdate
                                                        }
                                                            else
                                                            {
                                                                swal({
                                                                title: 'Are you sure?',
                                                                text: "You will start the releasing of this project.",
                                                                type: 'info',
                                                                showCancelButton: true,
                                                                confirmButtonColor: '#3085d6',
                                                                cancelButtonColor: '#d33',
                                                                confirmButtonText: 'Yes, Start Releasing!'
                                                                }).then((result) => {
                                                                if (result.value) {
                                                                    $('#formReleasingOPEN').submit();
                                                                }                        
                                                                })
                                                            }
                                                        }
                                                        console.log("Success: " );
                                                    });                                     
                                                            
                                                },
                                                error : function(e) {
                                                    console.log("ERROR: ", e);
                                                }
                                            });	
                                        }
                                        });  
                                        
                                        $('#but-rel').on('click',function (e) {
                                            var form = $(this).parents('form');
                                            e.preventDefault(); //prevent submit
                                            
                                                swal({
                                                title: 'Are you sure?',
                                                text: "You sure to open releasing of project?.",
                                                type: 'info',
                                                showCancelButton: true,
                                                confirmButtonColor: '#3085d6',
                                                cancelButtonColor: '#d33',
                                                confirmButtonText: 'Yes, Open it!'
                                                }).then((result) => {
                                                if (result.value) {
                                                    $('#formReleasingreason').submit();
                                                }                        
                                                })
                                        });  
                                    });