extends ../../home/views/navbar.pug

block content
     <!-- STATISTIC-->
        <section class="statistic">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                //dito start ng content
                <h3 class="title-5 m-b-35">Project List</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option disabled="disabled" selected="selected">Select ...</option>
                                    <option value = "All">All</option>
                                    <option value = "1">Health</option>
                                    <option value = "2">Education</option>
                                    <option value = "3">Finance</option>
                                    <option value = "4">Infrastracture</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter">
                                <i class="zmdi zmdi-filter-list"></i>filters</button>
                        </div>
                    </div>
                    <div class="table-responsive  m-b-40 pb-5">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Project Objectives</th>
                                    <th>Category</th>
                                    <th>Alloted Slot</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                            </thead>
                            <tbody>
                            each project in tbl_project
                                <tr class="tr-shadow">
                                    <td>
                                    value=project.varchar_projectName
                                    </td>
                                    <td>
                                        value=project.text_projectObjective
                                    </td>
                                    <td>
                                        value=project.varchar_categoryName
                                    </td>
                                    <td>
                                        value=project.int_allotedSlot
                                    </td>
                                    <td>
                                        value=project.enum_projectStatus
                                    </td>
                                    <td> 
                                        a(href=`/office/projects/newproject/${project.int_projectID}/viewproj` id="viewproj" class="btn btn-primary btn-block"): span View Details
                                        a(href=`/office/projects/ongoingproject/${project.int_projectID}/viewapp` id="viewapp" class="btn btn-primary btn-block"): span Applications
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- END STATISTIC-->