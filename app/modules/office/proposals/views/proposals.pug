extends ../../home/views/navbar.pug

block content
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h1 class="text-center">Proposal</h1>
                        <div class="text-center">
                            a(href=`/office/proposals/createproposals/` id="viewproj" class="btn btn-primary") Create Proposal
                        </div>
                    </div>             
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="datatable" width="95%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Proposed Name</th>
                                                        <th>Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>Project Name</th>
                                                        <th>Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody>
                                                each project in tbl_projectproposal
                                                    <tr>
                                                    <td>
                                                        value=project.varchar_projectName
                                                        </td>
                                                        <td>
                                                            value=project.enum_proposalStatus
                                                        </td>
                                                        <td>
                                                            a(href=`/office/proposals${project.int_projectID}/proposaldetails` id="viewproj" class="btn btn-info btn-xs btn-block"): span View Details
                                                            if project.enum_proposalStatus == "Approved"
                                                                button.btn.btn-success.btn-s.btn-block(type='button' data-toggle="modal" data-target=".bs-example-modal-sm") Confirm Check
                                                            if project.enum_proposalStatus == "Revision"
                                                                button.btn.btn-info.btn-s.btn-block(type='submit') Revise
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-sm">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <form class="form-horizontal form-label-left" method="POST" action='projectcategory' name="addprojcat" novalidate>
                                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel"><span class="section">Confirm Check Number</span></h4>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control">
                                                        <span class="input-group-btn">
                                                            <button type="button" class="btn btn-success">Submit</button>
                                                        </span>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>
                                    </div>
                                </div>
        <!-- END STATISTIC-->
            