extends ../../home/views/navbar.pug

block content
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h1>List of Submitted Proposals</h1>
                    </div>              
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="datatable" width="95%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Proposed Project Name</th>
                                                        <th>Project Objectives</th>
                                                        <th>Category</th>
                                                        <th>Alloted Slot</th>
                                                        <th>Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>Project Name</th>
                                                        <th>Project Objectives</th>
                                                        <th>Category</th>
                                                        <th>Alloted Slot</th>
                                                        <th>Status</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody>
                                                each project in tbl_projectproposal
                                                    <tr>
                                                    <td>
                                                        value=project.varchar_projectName
                                                        </td>
                                                        <td>
                                                            value=project.text_projectObjective
                                                        </td>
                                                        <td>
                                                            value=project.varchar_categoryName
                                                        </td>
                                                        <td>
                                                            value=project.int_allotedSlot
                                                        </td>
                                                        <td>
                                                            value=project.enum_proposalStatus
                                                        </td>
                                                        <td>
                                                            a(href=`/office/proposals/submittedproposals/${project.int_projectID}/proposaldetails` id="proposaldetails" class="btn btn-primary btn-xs btn-block"): span View Details
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <form class="form-horizontal form-label-left" method="POST" action='projectcategory' name="addprojcat" novalidate>
                                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel"><span class="section">Project Category Details</span></h4>
                                                    <div class="item form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectcategoryname">Project Category Name <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                                        <input id="projectcategoryname" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="3" name="projectcategoryname" placeholder="" required="required" type="text">
                                                        </div>
                                                    </div>
                                                    <div class="item form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectcategorydescription">Project Category Description <span class="required">*</span>
                                                        </label>
                                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                                        <input id="projectcategorydescription" class="form-control col-md-12 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="projectcategorydescription" placeholder="" required="required" type="text">
                                                        </div>
                                                    </div>
                                                    <button type="submit" id="modalbutton" class="btn btn-primary float-right" position="center" style="background-color#21BA45;color:whitesmoke;border:none;">Submit</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>
                                    </div>
                                </div>
        <!-- END STATISTIC-->
            