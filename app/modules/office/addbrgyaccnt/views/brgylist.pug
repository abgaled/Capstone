extends ../../home/views/navbar.pug

block content
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h1>List of Barangay</h1>
                    </div>              
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="datatable" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Barangay Name</th>
                                                        <th>Address</th>
                                                        <th>Contact</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>Barangay Name</th>
                                                        <th>Address</th>
                                                        <th>Contact</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody>
                                                each brgy in tbl_barangay
                                                    <tr>
                                                        <td>
                                                            value=brgy.varchar_barangayName
                                                        </td>
                                                        <td>
                                                            value=brgy.text_barangayAddress
                                                        </td>
                                                        <td>
                                                            value=brgy.varchar_barangayContact
                                                        </td>
                                                        <td>
                                                            if brgy.int_userID === null
                                                                button.btn.btn-success.btn-sm.btn-block(id="btn-addAccount" class="btn-addAccount" value= brgy.int_barangayID): span.fa.fa-plus  Add Account
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="addAccountModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <form class="form-horizontal form-label-left" method="POST" action='' id="formadduser">
                                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                                                    </button>
                                                    <h4 class="modal-title" id="mediumModalLabel">Barangay E-mail Address
                                                    <div class="modal-body">
                                                        <div class="input-group">
                                                            <input type="hidden" id="brgyID" name="brgyID" >
                                                            <input type="hidden" id="barangayPassword" name="barangayPassword"> 
                                                            <input type="email" id="barangayEmail" name="barangayEmail"class="form-control" required>
                                                            <span class="input-group-btn">
                                                                <button type="submit" id="but-sub" class="btn btn-success">Send</button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>
                                    </div>
                                </div>
        <!-- END STATISTIC-->
                
        <script src="/newassets/vendor/jquery-3.2.1.min.js"></script>


        script.

            $(document).ready(function () {

                $('.btn-addAccount').click(function (e) {
                    e.preventDefault()
                    var Id = $(this).val();
                    console.log("================================Id(Class)")
                    console.log(Id);
                    console.log("================================Id(Class)")
                    $('#addAccountModal').modal('show');
                    document.getElementById("brgyID").value = Id;
                }); 

                //- SWEET ALERT CONFIRM SUBMIT
                          $('#but-sub').on('click',function (e) {
                              var form = $(this).parents('form');
                              e.preventDefault(); //prevent submit
                              
                                  swal({
                                  title: 'Are you sure?',
                                  text: "You will submit this barangay email address.",
                                  type: 'info',
                                  showCancelButton: true,
                                  confirmButtonColor: '#3085d6',
                                  cancelButtonColor: '#d33',
                                  confirmButtonText: 'Yes, submit it!'
                                  }).then((result) => {
                                  if (result.value) {
                                      $('#formadduser').submit();
                                  }                        
                                  })
                          });
                          //- START VALIDATIONS
                          $(function() {
                          $("#formadduser").validate({
                              rules: {
                              barangayEmail: {
                                  required: true,
                              },
                              action: "required"
                              },
                              messages: {
                              barangayEmail: {
                                  required: "Please enter barangay email address",
                              },
                              action: "Please provide some data"
                              },
                              submitHandler: function(form){
                                  form.submit();
                                  swal(
                                      'Success!',
                                      'Barangay Email has been Submitted!',
                                      'success'
                                      )
                              }
                          });
                          
                          });
                          //- END VALIDATIONS
            });

            
            var text = "";
            var possible = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
            for (var i = 0; i < 8; i++)
                text += possible.charAt(Math.floor(Math.random() * possible.length)); 
            
            document.getElementById("barangayPassword").value = text;