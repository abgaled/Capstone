extends ../../home/views/navbar.pug

block content
    <div class="right_col" role="main">
        <div class="x_panel">
            <div class="x_title">
                <h2>PROJECT DETAILS <small></small></h2>
                <div class="clearfix"></div>
            </div>
        <div class="x_content">
            <ul class="list-unstyled timeline">
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Basic Information</span>
                            </a>
                        </div>
                        
                        each detail in details
                            <div class="block_content">
                                <h2 class="title">
                                    <a>Basic information of the Project Proposal</a>
                                </h2>
                                <hr/>                                
                                //- <div class="byline">
                                //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                                //- </div>
                                <p class="excerpt">
                                    <b>Project Name:   </b>
                                    value=detail.varchar_projectName
                                </p>
                                <p class="excerpt">
                                    <b>Project Rationale:   </b>
                                    value=detail.varchar_projectRationale
                                </p>
                                <p class="excerpt">
                                    <b>Project Description:   </b>
                                    value=detail.text_projectDescription
                                </p>
                                <p class="excerpt">
                                    <b>Project Objective:   </b>
                                    value=detail.text_projectObjective
                                </p>
                            </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Categories</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of categories of the project proposal</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each category in categories
                                <ul>
                                    <li>
                                        value=category.varchar_categoryName
                                    </li>
                                </ul>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Releasing Location</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of location/s where the benefits of the project proposal will be distributed</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each location in locations
                                <ul>
                                    <li>
                                        value=location.varchar_locationName
                                    </li>
                                </ul>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Beneficiary</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of target beneficiaries of this project proposal</a>
                            </h2>
                            <hr />                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each beneficiary in beneficiaries
                                <ul>
                                    <li>
                                        value=beneficiary.varchar_beneficiaryName
                                    </li>
                                </ul>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Requirement</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of requirement/s needed for the application for this project proposal</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each requirement in requirements
                                <ul>
                                    <li>
                                        value=requirement.varchar_requirementName
                                    </li>
                                </ul>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Timeline</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of requirement/s needed for the application for this project proposal</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each timeline in timelines
                                <p class="excerpt">
                                    <b>Start Date:   </b>
                                    value=timeline.date_projectStart
                                </p>
                                <p class="excerpt">
                                    <b>End Date:   </b>
                                    value=timeline.date_projectEnd
                                </p>
                                <p class="excerpt">
                                    <b>Releasing Date:   </b>
                                    value=timeline.datetime_releasingStart+" - "+timeline.datetime_releasingEnd
                                </p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Budget</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>Estimated budget for the project</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each budget in budgets
                                <p class="excerpt">
                                    <b>Alloted Slot for the beneficiaries:   </b>
                                    value=budget.int_allotedSlot
                                </p>
                                <p class="excerpt">
                                    <b>Duration of the project to open:   </b>
                                    value=budget.int_dayDuration
                                </p>
                                <p class="excerpt">
                                    <b>Estimated Budget:   </b>
                                    value=budget.decimal_estimatedBudget
                                </p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Form</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of form/s that the applicant needed to comply</a>
                            </h2>
                            <hr/>                                
                            //- <div class="byline">
                            //-     <span>13 hours ago</span> by <a>Jane Smith</a>
                            //- </div>

                            each form in forms
                                <ul>
                                    <li>
                                        value=form.varchar_formName
                                    </li>
                                </ul>
                        </div>
                    </div>
                </li>
                
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Approval</span>
                            </a>
                        </div>
                        
                        <div class="block_content">
                            <h2 class="title">
                                <a>List of form/s that the applicant needed to comply</a>
                            </h2>
                            <hr/>
                            <div class="row" style="block-inline">
                                each detail in details
                                    //- a(href='#'): button.btn.btn-success Approve
                                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#approveModal">Approve</button>
                                    //- <button type="button" class="btn btn-info btn-lg btn-block"  data-toggle="modal" data-target="#reviseModal">REVISE</button>
                                    button.btn.btn-info(data-toggle="modal" data-target="#reviseModal") Revise
                                    a(href=`/budget/proposals/${detail.int_projectID}/delete`): button.btn.btn-danger Reject
                            </div>          
                        </div>
                    </div>
                </li>
            </ul>
        </div>    
    </div>

    <!-- modal medium -->
    <div class="modal fade" id="reviseModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
            - console.log( details )
                each detail in details
                    <form method="POST" action='/budget/proposals/revision'>
                        <div class="modal-header">
                            <h5 class="modal-title" id="mediumModalLabel">Revision Form</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row form-group">
                                <div class="col col-md-2">
                                    <label for="textarea-input" class=" form-control-label">Suggestion</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <textarea name="revision" rows="9" placeholder="Content..." class="form-control" required></textarea>
                                    <small class="form-text text-muted">Put all of the your suggestion,remarks or comment for the revision of this project. In this way, the proposal project might be approved when the revision is done.</small>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            //- a(href=`/budget/proposals/${detail.int_projectID}/revision`): button.btn.btn-success Confirm
                            //- <input type="submit" value="submit" class="btn btn-success">
                            button.btn.btn-success.btn-s(type='submit') Submit
                        </div>
                    </form>
            </div>
        </div>
    </div>
    <!-- end modal medium -->

    <!-- modal medium -->
        <div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                
                    <form method="POST" action="approval" data-parsley-validate class="form-horizontal form-label-left">
                    
                        each detail in details

                            input(type="hidden" value=`${detail.int_projectID}` name="int_projectID")

                            <div class="modal-header">
                                <h5 class="modal-title" id="mediumModalLabel">Approval Requirement</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                //- <div class="input-group mb-3">
                                //-     <div class="input-group-prepend">
                                //-         <span class="input-group-text" >Approval Letter</span>
                                //-     </div>
                                //-     <div class="custom-file">
                                //-         <input type="file" class="custom-file-input" name="letterfile">
                                //-         <label class="custom-file-label" >Choose file</label>
                                //-     </div>
                                //- </div>

                                <div class="form-row">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="approval-letter">Approval Letter <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="file" name="approval-letter" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="actual-budget">Actual Budget<span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" data-inputmask="'mask' : '999,999,999.99'" name="actual-budget" id="actual-budget" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                </div>

                                //- <div class="input-group mb-3">
                                //-     <div class="input-group-prepend">
                                //-         <span class="input-group-text">Actual Budget</span>
                                //-         <span class="input-group-text"> P </span>
                                //-     </div>
                                //-     <input type="text" class="form-control" name="actualbudget" required> 
                                //-     <div class="input-group-append">
                                //-         <span class="input-group-text">0.00</span>
                                //-     </div>
                                //- </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                //- a(href=`/budget/proposals/${detail.int_projectID}/approval`): button.btn.btn-success Confirm
                                //- <input type="submit" value="submit" class="btn btn-success">
                                button.btn.btn-success.btn-s(type='submit') Submit
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end modal medium -->