extends ../../navbar/views/navbar.pug

block content
        <div class="right_col" role="main">
        each project in tbl_projectproposal
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h3>Update:<h3>
                  a(href=`/admin/maintenance/projects` class="btn btn-danger btn-s pull-right"): span.fa.fa-times-circle      
                </div>
                  <form method="POST" action="editproject">
                      input(type="hidden" value=`${project.int_projectID}` name="int_projectID")

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectname">Project Name <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="text" class="form-control col-md-7 col-xs-12" id="projectname" placeholder="Project Name" name="projectname" value=`${project.varchar_projectName}` required)
                        </div>

                      </div>
                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="releaselocation">Release Location <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="text" class="form-control col-md-7 col-xs-12" id="releaselocation" placeholder="Release Location" name="releaselocation" value=`${project.varchar_releaseLocation}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectrationale">Project Rationale <span class="required">*</span>
                        </label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                          input(type="text" class="form-control col-md-7 col-xs-12" id="projectrationale" placeholder="Project Rationale" name="projectrationale" value=`${project.varchar_projectRationale}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectobjective">Project Objective <span class="required">*</span>
                        </label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                          input(type="text" class="form-control col-md-7 col-xs-12" id="projectobjective" placeholder="Project Objective" name="projectobjective" value=`${project.varchar_projectObjective}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="projectdescription">Project Description <span class="required">*</span>
                        </label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                          input(type="textarea" class="form-control col-md-7 col-xs-12" id="projectdescription" placeholder="Project Description" name="projectdescription" value=`${project.text_projectDescription}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="expectedoutput">Expected Output <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          input(type="textarea" class="form-control col-md-7 col-xs-12" id="expectedoutput" placeholder="Expected Output" name="expectedoutput" value=`${project.text_expectedOutput}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="allotedslot">Alloted Slot <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                          input(type="number" class="form-control col-md-7 col-xs-12" id="allotedslot" placeholder="Alloted Slot" name="allotedslot" value=`${project.int_allotedSlot}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="estimatedbudget">Estimated Budget <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="number" class="form-control col-md-7 col-xs-12" id="estimatedbudget" placeholder="Estimated Budget" name="estimatedbudget" value=`${project.decimal_estimatedBudget}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="individualbudget">Individual Budget <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="number" class="form-control col-md-7 col-xs-12" id="individualbudget" placeholder="Individual Budget" name="individualbudget" value=`${project.decimal_individualBudget}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="startdate">Start Date <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="date" class="form-control col-md-7 col-xs-12" id="startdate" placeholder="Start Date" name="startdate" value=`${project.date_startDate}` required)
                        </div>
                      </div>

                       <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="enddate">End Date <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="date" class="form-control col-md-7 col-xs-12" id="enddate" placeholder="End Date" name="enddate" value=`${project.endDate}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="approveddate">Approved Date <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="date" class="form-control col-md-7 col-xs-12" id="approveddate" placeholder="Approved Date" name="approveddate" value=`${project.date_approvedDate}` required)
                        </div>
                      </div>

                       <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="releasedate">Release Date <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="date" class="form-control col-md-7 col-xs-12" id="releasedate" placeholder="Release Date" name="releasedate" value=`${project.date_releaseDate}` required)
                        </div>
                      </div>

                      <div class="row form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="actualbudget">Actual Budget <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                          input(type="number" class="form-control col-md-7 col-xs-12" id="actualbudget" placeholder="Actual Budget" name="actualbudget" value=`${project.decimal_actualBudget}` required)
                        </div>
                      </div>
                      <button type="submit" class="btn btn-default float-right" id="buttoneditprofile">Submit</button>
                  </div>
                  </form>
                </div>
            </div>
          </div>
        </div>