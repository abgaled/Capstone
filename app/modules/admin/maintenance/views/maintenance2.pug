extends ../../navbar/views/navbar.pug

block content
        <!-- page content -->
        <div class="right_col" role="main">
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h1>Requirements<button class="btn btn-primary btn-lg pull-right" id="addrequirement" type="button" data-toggle="modal" data-target=".bs-example-modal-sm"><span class="fa fa-plus"></span> Add</button></h1>
                </div>              
        <div class="content-wrapper">
            <div class="container-fluid">
            <div class="card mb-4">
                <div class="card-header">
                <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="datatable" width="95%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>Requirement Name</th>
                          <th>Actions</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                          <th>Requirement Name</th>
                          <th>Actions</th>
                          <th>Status</th>
                        </tr>
                      </tfoot>
                      <tbody>
                      each requirement in tbl_requirement
                          <tr>
                          <td>
                            value=requirement.varchar_requirementName
                          </td>
                          <td>
                            a(href=`/admin/maintenance/requirements/${requirement.int_requirementID}/editrequirement` id="editrequirement" class="btn btn-info btn-s"): span.fa.fa-pencil  Edit
                          </td>
                          <td>
                            if requirement.enum_requirementStatus == "Inactive"
                              form(method="POST" action="/admin/maintenance/requirements/activate")
                                input(value=requirement.int_requirementID name="id" required, hidden)
                                button.btn.btn-danger.btn-s(type='submit') Inactive
                            if requirement.enum_requirementStatus == "Active"
                              form(method="POST" action="/admin/maintenance/requirements/inactive")
                                input(value=requirement.int_requirementID name="id" required, hidden)
                                button.btn.btn-success.btn-s(type='submit') Active
                          </td>
                          </tr>
                      </tbody>
                    </table>
                </div>
                </div>
                </div>

                  <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                      <div class="modal-content">
                        <div class="modal-body">
                          <form class="form-horizontal form-label-left" method="POST" action='requirements' name="addrequirement" novalidate>
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                          </button>
                        <h4 class="modal-title" id="myModalLabel"><span class="section">Requirement Name</span></h4>
             
                      <div class="item form-group">
                        <div class="col-md-12 col-sm-4 col-xs-12">
                          <input id="requirementname" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="3" name="requirementname" placeholder="" required="required" type="text">
                        </div>
                      </div>
                      
                      </div>
                        <div class="modal-footer">
                          <button type="submit" id="modalbutton" class="btn btn-primary float-right" position="center" style="background-color#21BA45;color:whitesmoke;border:none;">Submit</button>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div></form>

                        </div>
                        </div>
                    </div>